{% extends 'base.html.twig' %}

{% block pagetitle %}
    <h1>CCron Jobs</h1>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th class="col-sm-3">Name</th>
                    <th class="col-sm-3">Schedule</th>
                    <th class="col-sm-2">Last Run</th>
                    <th class="col-sm-2">Next Run</th>
                    <th class="col-sm-1">Run Time</th>
                    <th class="col-sm-1"></th>
                </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr>
                        <td>{{ job.name }}</td>
                        <td>{{ job.cronschedule }}</td>
                        <td>{% if job.lastRun %}{{ job.lastRun | date }}{% endif %}</td>
                        <td>{{ job.nextRun | date }}</td>
                        <td>{{ job.lastRunTimeInterval | date }}</td>
                        <td>
                            <a class="btn btn-default btn-xs" href="{{ path('editjob',{'id': job.id}) }}">
                                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-default btn-xs" href="{{ path('viewbuilds',{'id': job.id}) }}">
                                <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">No Jobs Found</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="5"></td>
                    <td><a class="btn btn-primary btn-xs" href="{{ path('addjob') }}"><span class="glyphicon glyphicon-plus"></span></a></td>
                </tr>
                </tfoot>
            </table>

            <table id="recentbuilds" class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Job</th>
                    <th>Run</th>
                    <th>Time</th>
                    <th>Run Time</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{ include("default/recentbuilds.html.twig", { 'builds': builds }) }}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(function () {
            update();
        });
        function update() {
            $.get("{{ path('recentbuilds') }}", function (data) {
                $("#recentbuilds").find("tbody").html(data);
                window.setTimeout(update, 10000);
            });
        }
    </script>
{% endblock %}
