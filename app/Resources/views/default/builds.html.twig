{% extends 'job.html.twig' %}

{% block breadcrums %}
    {{ parent() }}
    <li>Builds</li>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th class="col-sm-1">ID</th>
                    <th class="col-sm-3">Time</th>
                    <th class="col-sm-2">Run Time</th>
                    <th class="col-sm-2">Host</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for build in builds %}
                    <tr build-id="{{ build.id }}">
                        <td class="build-id">{{ build.id }}</td>
                        <td class="build-time">{{ build.time | date }}</td>
                        <td class="build-interval">{{ build.runTimeInterval | date }}</td>
                        <td class="build-host">{{ build.host }}</td>
                        <td><a class="btn btn-default btn-xs" href="{{ path('viewconsole', {'id': build.id, 'job': job.id}) }}"><span
                                        class="glyphicon glyphicon-console"></span></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No Builds Found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
