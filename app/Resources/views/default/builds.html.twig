{% extends 'base.html.twig' %}

{% block pagetitle %}
    <h1>Builds for {{ job.name }}</h1>
{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <table class="table table-striped table-hover table-condensed">
                <colgroup>
                    <col class="col-sm-3">
                    <col class="col-sm-3">
                </colgroup>
                <thead>
                <tr>
                    <th class="col-sm-3">ID</th>
                    <th class="col-sm-3">Time</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for build in builds %}
                    <tr>
                        <td>{{ build.id }}</td>
                        <td>{{ build.time | date }}</td>
                        <td><a class="btn btn-default btn-xs" href="{{ path('viewconsole', {'id': build.id}) }}"><span
                                        class="glyphicon glyphicon-console"></span></a></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No Builds Found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
